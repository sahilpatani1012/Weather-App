<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <!-- Favicon -->
    <link rel="icon" href="/public/images/cloudy.png">
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- External CSS -->
    <link rel="stylesheet" href="/public/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="input">
        <form action="/" class="input-group" method="POST">
          <input
            class="form-control"
            type="text"
            name="cityName"
            placeholder="Search for a city.."
            autocomplete="off"
          />
          <button class="btn btn-success go-btn" type="submit">Go!</button>
        </form>
      </div>
      <div class="card weather-card col-md-4">
        <h2 class="city"> <%= city %>, <%= country %>  </h2>
        <h1 class="temp"><%= Math.round(temp) %>&deg;C </h1>
        <img src="<%= img %> " alt="">
        <p><%= desc %> </p>
      </div>
    </div>
  </body>
</html>
